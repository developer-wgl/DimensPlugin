<idea-plugin>
  <id>mi.wuguagnliang.plugin.dimens</id>
  <name>Automatically generate other corresponding dimens files according to the default dimens file.</name>
  <version>1.0</version>
  <vendor email="v-wuguagnliang@xiaomi.com" url="https://www.wuguangliang.xyz/userself">mi</vendor>

  <description>Automatically generate other corresponding dimens files according to the default dimens file.</description>

  <change-notes>Nothing</change-notes>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="173.0"/>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>

  <actions>
    <!-- Add your actions here -->
    <action id="DimensPlugin.DimensAction" class="plugin.wuguangliang.dimens.DimensAction" text="DimensPlugin"
            description="Automatically generate other corresponding dimens files according to the default dimens file.">
      <add-to-group group-id="ToolsMenu" anchor="first"/>
      <keyboard-shortcut keymap="$default" first-keystroke="shift ctrl alt D"/>
    </action>
  </actions>

</idea-plugin>